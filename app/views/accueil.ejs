<%- include('./partials/header') %>

<main>
  <section class="catalogue-container">
    <img src="/images/about.jpg" alt="Une table contenant plusieurs tasses de café remplies">
    <div class="catalogue">
      <h2>Découvrez nos produits</h2>
      <a href="/catalogue" class="btn btn-beige btn-catalogue">Voir le catalogue</a>
    </div>
    </div>
  </section>
    <h2>Nouveautés</h2>
    <div class="coffee-card-container">
      <% for(coffee of coffees) {%>
      <article class="coffee-card <%= !coffee.availability ? 'unavailable' : ''%>">
          <img src="/images/coffees/<%= coffee.reference %>.png" alt="Image du café ayant pour nom : <%= coffee.name %>">
          <h3 class="coffee-name"><%= coffee.name %></h3>
          <p class="para-produit"><%= coffee.description %></p>
          <p class="para-produit date-publication">Publié le <%= new Date(coffee.date_added).toLocaleDateString('fr-Fr') %></p>
          <div class="coffee-card-bottom">
            <p><strong><%= coffee.price%></strong><span class="kg">€/kg</span></p>
            <a href="/produit/<%= coffee.id %>" class="btn lien-produit">Découvrir ce café</a>
          </div>
      </article>
      <% } %>
      
    </div>
</main>
<%- include('./partials/footer') %>